<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="table">
        <h2><%= title %></h2>
        <input type="text" id="filter" placeholder="Search Patient.... ">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Patient Name</th>
                    <th>Phone Number</th>
                    <th>Services</th>
                    <th>Total</th>
                    <th>Mode of Payment</th>
                    <th>Amount Paid</th>
                    <th>Balance</th>
                    <th>Action</th> <!-- Add this line -->
                </tr>
            </thead>
            <tbody>
                <% receipts.forEach(receipt => { %>
                    <tr class="item-list">
                        <td><%= receipt.id %></td>
                        <td><%= new Date(receipt.created_at).toLocaleDateString('en-GB') %></td>
                        <td class="names"> <a href="/receiptDetails/<%= receipt.id %>"><%= receipt.patient_name %></a> </td>
                        <td>
                            <a 
                                href="https://wa.me/<%= receipt.patient_phone.replace(/\D/g, '') %>?text=Hello%20<%= encodeURIComponent(receipt.patient_name) %>,%20your%20balance%20is%20<%= encodeURIComponent(receipt.balance) %>."
                                target="_blank"
                                style="color: #25D366; text-decoration: none;"
                                title="Send WhatsApp message"
                            >
                                <%= receipt.patient_phone %>
                                <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp" style="height:16px;vertical-align:middle;margin-left:4px;">
                            </a>
                        </td>
                        <td><%= Array.isArray(receipt.service) ? receipt.service.join(", ") : receipt.service %></td>
                        <td><%= receipt.total %></td>
                        <td><%= receipt.mode_of_payment %></td>
                        <td><%= receipt.amount_paid %></td>
                        <td><%= receipt.balance %></td>
                        <td>
                            <% if (user.usertype === 'admin') { %>
                                <button onclick="deleteReceipt('<%= receipt.id %>')" style="color: white;">Delete</button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
        document.getElementById('filter').addEventListener('input', function() {
            const filterValue = this.value.toLowerCase();
            const rows = document.querySelectorAll(".item-list");

            rows.forEach(row => {
                const cells = row.querySelectorAll("td");
                let match = false;
                cells.forEach(cell => {
                    if (cell.textContent.toLowerCase().includes(filterValue)) {
                        match = true;
                    }
                });
                if (match) {
                    row.classList.remove('hidden');
                } else {
                    row.classList.add('hidden');
                }
            });
        });

        // Add this function for deleting a receipt
        async function deleteReceipt(receiptId) {
            if (confirm("Are you sure you want to delete this receipt?")) {
                try {
                    const response = await fetch(`/receipts/delete/${receiptId}`, {
                        method: 'DELETE'
                    });
                    const result = await response.json();
                    if (response.ok) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message || "Error deleting receipt");
                    }
                } catch (error) {
                    alert("Error deleting receipt");
                }
            }
        }
    </script>
</body>
</html>